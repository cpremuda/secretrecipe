{
    "startState": "ACTION_CheckAuth",

    "ACTION_CheckAuth": {
        "state_type": "ACTION",
        "ref": "MY_App.controllers.auth.isLoggedIn",
        "transitions": {
            "true": "END_done",
            "false": "VIEW_SignIn"
        }
    },
    "ACTION_SignIn": {
        "state_type": "ACTION",
        "ref": "MY_App.controllers.auth.login",
        "transitions": {
            "success": "END_done",
            "fail": "VIEW_SignIn"
        }
    },
    "ACTION_CreateAcct": {
        "state_type": "ACTION",
        "ref": "MY_App.controllers.auth.createAccount",
        "transitions": {
            "success": "END_done",
            "fail": "ACTION_CreateAcct"
        }
    },
    "VIEW_SignIn": {
        "state_type": "VIEW",
        "ref": "auth.signin",
        "transitions": {
            "continue": "ACTION_SignIn",
            "forgotPassword" : "VIEW_ForgotPW",
            "createAcct" : "VIEW_CreateAcct"
        }
    },
    "VIEW_CreateAcct": {
        "state_type": "VIEW",
        "ref": "auth.createAcct",
        "transitions": {
            "continue": "ACTION_CreateAcct",
            "signIn" : "VIEW_SignIn"
        }
    },
    "END_done": {
        "state_type": "END",
        "outcome": "done"
    }
}